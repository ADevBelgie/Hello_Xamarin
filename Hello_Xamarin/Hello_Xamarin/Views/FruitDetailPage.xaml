<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hello_Xamarin.Views.FruitDetailPage">
    <ContentPage.Resources>
        <Style TargetType="Label">
            <Setter Property="TextColor" Value="#333"/>
            <Setter Property="FontSize" Value="25"/>
        </Style>        
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout Margin="10">
            <Image Source="{Binding FruitData.Image}" WidthRequest="200" HorizontalOptions="Start"/>
            <Label Text="{Binding FruitData.Species}"/>
            <Label Text="{Binding FruitData.Id}"/>
            <Label Text="{Binding FruitData.Name}"/>
            <Label Text="{Binding FruitData.Color}"/>
            <Label Text="{Binding FruitData.Weight}"/>
            <Label Text="{Binding FruitData.PriceKilo}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>